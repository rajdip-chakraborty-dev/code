# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update with your values

# GCP Configuration
project_id = "your-gcp-project-id"  # Replace with your actual GCP project ID
region     = "us-central1"
zone       = "us-central1-a"

# VPC Configuration
vpc_name = "terraform-demo-vpc"
subnets = [
  {
    name          = "terraform-demo-subnet"
    ip_cidr_range = "10.0.1.0/24"
    region        = "us-central1"
  }
]

# Firewall Rules (using defaults, can be customized)
firewall_rules = [
  {
    name          = "allow-ssh"
    direction     = "INGRESS"
    priority      = 1000
    source_ranges = ["0.0.0.0/0"]
    target_tags   = ["ssh"]
    allow = [
      {
        protocol = "tcp"
        ports    = ["22"]
      }
    ]
  },
  {
    name          = "allow-http"
    direction     = "INGRESS"
    priority      = 1000
    source_ranges = ["0.0.0.0/0"]
    target_tags   = ["http-server"]
    allow = [
      {
        protocol = "tcp"
        ports    = ["80"]
      }
    ]
  },
  {
    name          = "allow-https"
    direction     = "INGRESS"
    priority      = 1000
    source_ranges = ["0.0.0.0/0"]
    target_tags   = ["https-server"]
    allow = [
      {
        protocol = "tcp"
        ports    = ["443"]
      }
    ]
  }
]

# Compute Engine Configuration
vm_instance_name = "terraform-demo-instance"
vm_machine_type  = "e2-micro"
vm_username      = "terraform-user"

# Cloud Storage Configuration
bucket_name_prefix = "terraform-demo-bucket"

# KMS Configuration
keyring_name = "terraform-demo-keyring"

# Common Labels
common_labels = {
  environment = "development"
  project     = "terraform-gcp-demo"
  managed_by  = "terraform"
  owner       = "devops-team"
  cost_center = "engineering"
}
