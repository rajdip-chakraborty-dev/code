# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update with your values

# Resource Group
resource_group_name = "rg-terraform-demo"
location           = "East US"

# Network Configuration
vnet_name             = "vnet-terraform-demo"
vnet_address_space    = ["10.0.0.0/16"]
subnet_name           = "subnet-internal"
subnet_address_prefix = "10.0.1.0/24"

# Storage Account (must be globally unique)
storage_account_name = "saterraformdemo001"

# Key Vault (must be globally unique)
key_vault_name = "kv-terraform-demo-001"

# Virtual Machine
vm_name           = "vm-terraform-demo"
vm_size           = "Standard_DS1_v2"
vm_admin_username = "azureuser"

# Tags
tags = {
  Environment = "Development"
  Project     = "Terraform-Demo"
  ManagedBy   = "Terraform"
  Owner       = "DevOps-Team"
}
