# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# VPC Configuration
vpc_name             = "terraform-demo-vpc"
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# EC2 Configuration
ec2_instance_name = "terraform-demo-instance"
ec2_instance_type = "t3.micro"
ec2_username      = "ec2-user"
key_pair_name     = "my-terraform-keypair"  # Must exist in your AWS account

# S3 Configuration
s3_bucket_name_prefix = "terraform-demo-bucket"

# Secrets Manager Configuration
secret_name_prefix = "terraform-demo"

# Common Tags
common_tags = {
  Environment = "Development"
  Project     = "Terraform-AWS-Demo"
  ManagedBy   = "Terraform"
  Owner       = "DevOps-Team"
  CostCenter  = "Engineering"
}
